<views:PageBase
    x:Class="WinUX.UWP.Samples.Samples.Helpers.WindowHelper.Pages.WindowHelperPageTwo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:WinUX.MvvmLight.Xaml.Views"
    mc:Ignorable="d">

    <RelativePanel Background="{StaticResource GreyBrush100}">
        <TextBlock x:Name="PageText" Text="This is WindowHelperPageTwo!" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource OrangeBrush500}" Style="{StaticResource SubheaderTextBlockStyle}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" />

        <Button Content="Navigate to page one" Click="{x:Bind ViewModel.NavigateToPageOne}" MaxWidth="600" Margin="10" Style="{StaticResource SampleButtonStyle}" VerticalAlignment="Bottom" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="PageText" />
    </RelativePanel>
</views:PageBase>